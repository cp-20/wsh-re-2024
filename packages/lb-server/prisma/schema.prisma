generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @unique
  url        String
  createdAt  DateTime     @default(now())
  Submission Submission[]

  @@index([url])
  @@map("users")
}

model Submission {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  score     Int
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([score])
  @@index([createdAt])
  @@map("submissions")
}
